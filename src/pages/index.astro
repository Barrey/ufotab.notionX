---
import DocsLayout from '../layouts/DocsLayout.astro';
import { components } from '../config/components';
---

<DocsLayout title="Welcome">
  <div class="max-w-4xl">
    <h1 class="text-4xl font-bold mb-6">Welcome to Our Component Library</h1>
    <p class="text-lg text-gray-600 mb-8">
      Explore our collection of beautiful, responsive Tailwind CSS components.
      Each component is carefully crafted and comes with copy-paste ready code.
    </p>

    <div class="grid grid-cols-2 md:grid-cols-2 md:gap-6 gap-1">
      {
        components.map((component) => (
          <a
            href={component.href}
            class="block p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
          >
            <h2 class="text-2xl font-semibold mb-2">{component.title}</h2>
            <p class="text-gray-600">{component.description}</p>
          </a>
        ))
      }
    </div>
  </div>
</DocsLayout>
