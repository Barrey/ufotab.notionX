---
import DocsLayout from '../../layouts/DocsLayout.astro';
import PreviewWrapper from '../../components/PreviewWrapper.astro';
import { readFile } from 'node:fs/promises';

const buttonComponents = [
  {
    path: 'src/components/html/buttons/button1.html',
    title: 'Button Example',
    description:
      'The button component is used for general actions and interactions.',
  },
  {
    path: 'src/components/html/buttons/button2.html',
    title: 'Button with Icon Example',
    description: 'The button component with color variants.',
  },
  {
    path: 'src/components/html/buttons/button3.html',
    title: 'Button with size variations',
    description: 'The button component with size variations.',
  },
  {
    path: 'src/components/html/buttons/button4.html',
    title: 'Button with states',
    description: 'The button component with states.',
  },
  {
    path: 'src/components/html/buttons/button5.html',
    title: 'Button with contextual usage',
    description: 'The button component with contextual usage.',
  },
  {
    path: 'src/components/html/buttons/button6.html',
    title: 'Button in group',
    description: 'The button component in group.',
  },
  {
    path: 'src/components/html/buttons/button7.html',
    title: 'Button with special effects',
    description: 'The button component with special effects.',
  },
];

const buttons = await Promise.all(
  buttonComponents.map(async (file) => ({
    ...file,
    code: await readFile(file.path, 'utf-8'),
  }))
);
---

<DocsLayout title="Buttons - Documentation">
  <div class="w-full">
    <p class="text-gray-600 mb-8">
      A collection of button components with different styles and variations.
    </p>

    <div class="space-y-12">
      {
        buttons.map((button) => (
          <section>
            <p class="text-gray-600 mb-4">{button.description}</p>
            <PreviewWrapper
              title={button.title}
              code={button.code}
              path={button.path}
            />
          </section>
        ))
      }
    </div>
  </div>
</DocsLayout>
