---
import DocsLayout from '../../layouts/DocsLayout.astro';
import PreviewWrapper from '../../components/PreviewWrapper.astro';
import { readFile } from 'node:fs/promises';

const toggleComponents = [
  {
    path: 'src/components/html/toggles/toggle1.html',
    title: 'Toggle Example',
    description: 'The toggle component is used for general purposes.',
  },
  {
    path: 'src/components/html/toggles/toggle2.html',
    title: 'Toggle with size variations',
    description: 'The toggle component with size variations.',
  },
  {
    path: 'src/components/html/toggles/toggle3.html',
    title: 'Toggle with color variations',
    description: 'The toggle component with color variations.',
  },
  {
    path: 'src/components/html/toggles/toggle4.html',
    title: 'Toggle with state variations',
    description: 'The toggle component with state variations.',
  },
  {
    path: 'src/components/html/toggles/toggle5.html',
    title: 'Toggle with contextual usage',
    description: 'The toggle component with contextual usage.',
  },
];

const toggle = await Promise.all(
  toggleComponents.map(async (file) => ({
    ...file,
    code: await readFile(file.path, 'utf-8'),
  }))
);
---

<DocsLayout title="Toggles - Documentation">
  <div class="w-full">
    <p class="text-gray-600 mb-8">
      A collection of toggle components with different styles and variations.
    </p>

    <div class="space-y-12">
      {
        toggle.map((toggle) => (
          <PreviewWrapper
            code={toggle.code}
            title={toggle.title}
            description={toggle.description}
            path={toggle.path}
          />
        ))
      }
    </div>
  </div>
</DocsLayout>
